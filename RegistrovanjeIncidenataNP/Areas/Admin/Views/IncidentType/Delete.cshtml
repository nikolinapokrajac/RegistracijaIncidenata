@using RegistrovanjeIncidenata.Models;
@model IncidentType
<h2>Izbriši vrstu incidenta</h2>

<form method="post" class="=row">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="row pb-2">
            </hr>
        </div>
        <div class="row">
            <div class="col-10">
        <div class="form-floating col-12 py-2">
            <label asp-for="Name" class="ns-2"></label>
            <input disabled asp-for="Name" class="form-control border-0 shadow" />
        </div>
        <div class="form-floating col-12 py-2">
            <label asp-for="Description" class="ns-2"></label>
            @* <textarea asp-for="Description" class="form-control border-0 shadow" disabled>@Html.Raw(RegistrovanjeIncidenata.Utility.StringUtility.StripPTags(Model.Description))</textarea> *@
            <input disabled class="form-control border-0 shadow" value="@Html.Raw(RegistrovanjeIncidenata.Utility.StringUtility.StripPTags(Model.Description))"/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Obriši</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-secondary border form-control" asp-controller="IncidentType" asp-action="Index">Vrati se na početnu stranu</a>
            </div>
        </div>
    </div>
    <div class="col-2">
        <img src="@Model.ImageUrl" width="100%" />
    </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }
